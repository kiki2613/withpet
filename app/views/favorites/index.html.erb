<%= render "share/header" %>

<div class="my-favorite-page">
  <div class="my-favorite-logo-icon">
    <i class="fa-solid fa-heart fa-2xl" style="color: #ec3383;"></i>
    <div class="my-favorite-logo">
      お気に入りリスト
    </div>
  </div>
  <div class="my-favorite-list">
    <% if @favorited_shops.present? %>
      <ul class="shop-li">
        <% @favorited_shops.each do |shop| %>
          <%= render partial: 'share/shop_info', locals: { shop: shop } %>
        <% end %>
      </ul>
    <% else %>
      <div class="my-favorite-none">
        <div class="none-favorite-logo">
          お気に入りの店舗を見つけよう！
        </div>
        <div class="search-back">
          <%= link_to "いますぐさがす", root_path, class: "search-back-button" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
