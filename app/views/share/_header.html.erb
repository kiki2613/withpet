<header>
  <div class="header">
    <div class="heading">
      <h1 class="title">With pet</h1>
    </div>
    <div class="navbar">
      <ul class="nav-lists">
        <% if user_signed_in? %>
          <li class="header-li">
            <%= link_to 'Logout', destroy_user_session_path, data: { turbo_method: :delete }, class: "logout" %>
          </li>
          <li class="header-li">
            <%= link_to current_user.nickname, "#", class: "user-nickname" %>
          </li>
        <% else %>
          <li class="header-li">
            <%= link_to '新規登録', new_user_registration_path, class: "signup" %>
          </li>
          <li class="header-li">
            <%= link_to 'Login', new_user_session_path, class: "login" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</header>