<header>
  <div class="header">
    <div class="heading">
      <h1 class="title">
        <%= link_to 'With pet', root_path, class: "title-logo" %>
      </h1>
    </div>
    <div class="search-area">
      <%= render "share/search_form"%>
    </div>
    <div class="navbar">
      <ul class="nav-lists">
    <% if user_signed_in? %>
      <li class="header-li">
        <div class="user-nickname" id="mypage">
          <div class="nickname">
            Welcome <%= current_user.nickname %>
          </div> 
        </div>
        <ul class="mypage-pulldown hidden" id="mypage-list">
          <li class="mypage-menu">
            <%= link_to 'プロフィール', user_path(current_user.id), class: "user-info" %>
          </li>
          <li class="mypage-menu">
            <%= link_to 'お気に入りリスト', favorites_path, class: "myfavorite" %>
          </li>
          <li class="mypage-menu">
            <%= link_to '口コミ投稿リスト', reviews_path, class: "mycomment" %>
          </li>
          <li class="mypage-menu">
            <%= link_to 'ログアウト', destroy_user_session_path, data: { turbo_method: :delete }, class: "logout" %>
          </li>
        </ul>
      </li>
    <% else %>
      <li class="header-li">
        <%= link_to new_user_registration_path, class: "btn btn--pink btn--radius btn--cubic" do %>
          <div class="signup">Signup</div>
          <i class="fas fa-angle-right fa-position-right"></i>
        <% end %>
      </li>
      <li class="header-li">
        <%= link_to new_user_session_path, class: "btn btn--pink btn--radius btn--cubic" do %>
          <div class="login">Login</div>
          <i class="fas fa-angle-right fa-position-right"></i>
        <% end %>
      </li>
    <% end %>
  </ul>
      </ul>
    </div>
  </div>
</header>
