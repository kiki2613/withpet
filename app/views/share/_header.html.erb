<header>
  <div class="header">
    <div class="heading">
      <h1 class="title">
        <%= link_to 'With pet', root_path, class: "title-logo" %>
      </h1>
    </div>
    <div class="navbar">
      <ul class="nav-lists">
        <% if user_signed_in? %>
          <li class="header-li">
            <%= link_to current_user.nickname, "#", id: "mypage", class: "user-nickname" %>
          </li>
            <ul class="mypage-pulldown hidden" id="mypage-list">
              <li class="mypage-menu">
                <%= link_to 'プロフィール', user_path(current_user.id), class: "user-info" %>
              </li>
              <li class="mypage-menu">
                <%= link_to 'お気に入りリスト', favorites_path, class: "myfavorite" %>
              </li>
              <li class="mypage-menu">
                <%= link_to '口コミ投稿リスト', reviews_path, class: "mycomment" %>
              </li>
            </ul>
          <li class="header-li">
            <%= link_to 'Logout', destroy_user_session_path, data: { turbo_method: :delete }, class: "logout" %>
          </li>
        <% else %>
          <li class="header-li">
            <%= link_to '新規登録', new_user_registration_path, class: "signup" %>
          </li>
          <li class="header-li">
            <%= link_to 'Login', new_user_session_path, class: "login" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</header>