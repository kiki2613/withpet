<div class="user-registaration">
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'registration-main' }) do |f| %>
  <div class="form-area">
    <div class='form-container'>
      <div class='back-link'>
        <%= link_to user_path(current_user.id) do %>
          <div class="cancel-btn">
            <i class="fa-regular fa-circle-xmark fa-2xl" style="color: #e25f70;"></i>
          </div>
        <% end %>
      </div>
      <div class='form-header'>
        <h1 class='form-header-text'>
          会員情報編集
        </h1>
      </div>

      <%= render 'share/error_messages', model: f.object %>

      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">ニックネーム</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_field :nickname, class:"input-default", id:"nickname", maxlength:"40" %>
      </div>

      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">メールアドレス</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true  %>
      </div>

      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">年代</label>
        </div>
        <%= f.collection_select(:age_id, Age.all, :id, :name, {}, {class: "select-box", id:"age"}) %>
      </div>

      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">性別</label>
        </div>
        <%= f.collection_select(:gender_id, Gender.all, :id, :name, {}, {class: "select-box", id:"gender"}) %>
      </div>

      <div class='register-btn'>
        <%= f.submit "登録する", class:"register-button" %>
      </div>
      
    </div>
  </div>
  <% end %>
</div>