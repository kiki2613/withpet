<h1>新しいレビューを投稿する</h1>

<%= form_with(model: [@shop, @review], local: true) do |f| %>
  <%= f.file_field :image, id:"item-image" %>
  <div class="field">
    <div class='input-visit-wrap'>
      <%= raw sprintf(
                  f.date_select(
                    :visit_date,
                    class:'select-visit',
                    id:"visit-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1990,
                    end_year: (Time.now.year),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
    </div>
  </div>

  <div class="field">
    <%= f.label :comment, "レビュー内容" %>
    <%= f.text_area :comment %>
  </div>

  <div class="actions">
    <%= f.submit "投稿する" %>
  </div>
<% end %>

<%= link_to '戻る', shop_path(@shop) %>