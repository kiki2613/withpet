<div class="review-form-page">
  <div class="review-form-container">
    <h1>レビューを投稿する</h1>

    <%= form_with(model: [@shop, @review], local: true, html: { class: 'review-form' }) do |f| %>
      <div class="field">
        <%= f.file_field :image, id:"item-image", class: 'form-control' %>
      </div>

      <div class="field">
        <div class='input-visit-wrap'>
          <%= raw sprintf(
                  f.date_select(
                    :visit_date,
                    class:'select-visit form-control',
                    id:"visit-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1990,
                    end_year: (Time.now.year),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
        </div>
      </div>

      <div class="field">
        <%= f.label :comment, "レビュー内容" %>
        <%= f.text_area :comment, class: 'form-control' %>
      </div>

      <div class="actions">
        <%= f.submit "投稿する", class: 'btn-primary' %>
      </div>
    <% end %>

    <div class="back-link">
      <%= link_to '戻る', shop_path(@shop), class: 'back-button' %>
    </div>
  </div>
</div>